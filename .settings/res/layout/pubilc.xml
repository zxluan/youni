<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youni.MainActivity" xmlns:android1="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:ems="10"
        android:hint="@string/input_tytle.."
        android:inputType="textPersonName" />

    <requestFocus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text" >
    </EditText>

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radioButton1"
        android:layout_alignBottom="@+id/radioButton1"
        android:layout_toRightOf="@+id/button1"
        android:text="@string/need" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignRight="@+id/editText2"
        android:text="@string/dele" />

    <RadioButton
        android1:id="@+id/radioButton1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/editText2"
        android1:layout_below="@+id/editText1"
        android1:layout_marginTop="20dp"
        android1:text="@string/donation2" />

    <EditText
        android1:id="@+id/editText2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/editText1"
        android1:layout_below="@+id/radioButton2"
        android1:ems="10"
        android1:hint="@string/say_something"
        android1:inputType="textMultiLine" />

    <ImageButton
        android1:id="@+id/imageButton3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/textView1"
        android1:layout_toLeftOf="@+id/button2"
        android1:src="@android:drawable/ic_input_add" />

    <Button
        android1:id="@+id/button1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/editText3"
        android1:layout_toRightOf="@+id/editText4"
        android1:text="@string/check1" />

    <EditText
        android1:id="@+id/editText3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/button1"
        android1:layout_below="@+id/textView1"
        android1:ems="10"
        android1:hint="@string/input_address"
        android1:inputType="textPostalAddress" />

    <ImageButton
        android1:id="@+id/imageButton1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/radioButton1"
        android1:layout_marginTop="152dp"
        android1:layout_toLeftOf="@+id/imageButton3"
        android1:src="@android:drawable/ic_menu_camera" />

    <TextView
        android1:id="@+id/textView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/imageButton1"
        android1:layout_below="@+id/imageButton1"
        android1:layout_marginTop="20dp"
        android1:text="@string/address1"
        android1:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android1:id="@+id/takephoto"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/imageButton3"
        android1:layout_alignLeft="@+id/imageButton1"
        android1:layout_alignRight="@+id/editText2"
        android1:layout_below="@+id/editText2"
        android1:layout_marginTop="26dp"
        android1:src="@drawable/ic_launcher" />

</RelativeLayout>